<%- include('../partials/head') -%>
    <%- include('../partials/nav') -%>
        <%- include('../partials/location-nav') -%>

            <div class="map-container">
                <h1>Fridge in the Square <br>(Harvard Square, Cambridge) </h1>

                <div class="map-l">

                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d11790.598645264765!2d-71.11632!3d42.371305!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e3775cb73212b9%3A0xfe6ae67495c50864!2sThe%20Democracy%20Center!5e0!3m2!1sen!2sus!4v1678095563802!5m2!1sen!2sus"
                        width="100%" height="500px" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div class="map-s">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d11790.598645264765!2d-71.11632!3d42.371305!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e3775cb73212b9%3A0xfe6ae67495c50864!2sThe%20Democracy%20Center!5e0!3m2!1sen!2sus!4v1678095563802!5m2!1sen!2sus"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>

                <div class="fridge-content">
                    <h2>Location Information:</h2>
                    <p>
                        <a href="https://goo.gl/maps/pzKcic4NtE5pSXVM6" style="color: #405965"><i
                                class="fa-solid fa-location-dot" style="color: #405965"></i> &nbsp; 45
                            Mt Auburn St,
                            Cambridge, MA 02138</a>
                    </p>
                    <p></p>

                    <h2>Links</h2>
                    <p>
                    <table class="flinks">
                        <tr>
                            <td><a href=" https://www.instagram.com/cambridgefridge/">Instagram &nbsp;<i
                                        class="fa-brands fa-instagram"></i></a></td>

                            <td><a href="mailto: cambridgecommunityfridge@gmail.com">Email &nbsp;
                                    <i class="fa-regular fa-envelope"></i></a>
                            </td>
                            <td><a href="https://linktr.ee/CambridgeFridge">Linktree &nbsp;<i
                                        class="fa-solid fa-link"></i></a>
                            </td>
                        </tr>


                    </table>
                </div>
                </p>

                <h3>Donation Rules and Suggestions</h3>
                <p>
                <ul class="drules">
                    <h3><b>Recommended:</b>
                    </h3>
                    <li>Fresh produce</li>
                    <li>Dairy products (cheese milk eggs)</li>
                    <li>Prepared packaged meals from commercial kitchens with ingredients, allergens, date,
                        clearly
                        listed</li>
                    <li>Cleaning supplies</li>
                    <li>Mentstrual products</li>
                    <li>Paper bags</li>
                    <li>Sanitizer</li>

                    <h3><b>Not Allowed:</b>
                    </h3>
                    <li>Raw meat and seafood</li>
                    <li>Alcohol</li>
                    <li>Unlabeled or opened meals</li>
                    <li>Homemade meals or baked goods</li>
                    <li>Leftovers</li>
                    <li>Prepared and packaged foods that do not follow food donation guidelines</li>
                </ul>
                </p>
            </div>
            </div>
            </div>


            <div class="map-container">
                <h1>Updates And Feedback About This Fridge:</h1>
                <form id="post-form" method="POST" action="/posts">
                    <% if (username) { %>
                        <label for="name" class="name" id="name">You are posting as <%= username %></label>
                        <input type="hidden" name="name" value="<%= username %>">
                        <br>
                        <p>
                            <label for="content">Content</label>
                            <br>
                            <textarea id="content" name="content" class="textbox" required></textarea>
                        </p>
                        <input type="submit" id="submit-post" class="submit" value="Submit Post">
                        <% } else { %>
                            <button class="home-button"><a href="/login">Log in to post</a></button>
                            <% } %>
                </form>

            </div>

            <div class="map-container">

                <ul class="location1-post-list">
                    <% inventoryArray.forEach((post)=> { %>
                        <li class="post-container">
                            <p>
                                <%= post.name %>
                                    <br>
                                    <%= post.date %>
                            </p>
                            <p>
                                <%= post.content %>
                            </p>
                        </li>
                        <% }) %>
                </ul>

            </div>
            <%- include('../partials/footer') -%>